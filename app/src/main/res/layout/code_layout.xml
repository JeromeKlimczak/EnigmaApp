<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/code_layout"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/border"
    >

    <TextView
        android:id="@+id/txt_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bt_1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/bt_1"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignEnd="@id/bt_ok"
        android:layout_alignRight="@id/bt_ok"
        android:textAlignment="textEnd"
        android:background="@drawable/border"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/bt_4"
        android:layout_alignStart="@+id/bt_4"
        android:layout_alignTop="@+id/bt_2"
        android:padding="5dp"
        android:background="@drawable/draw_bt_1"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/bt_2"
        android:layout_below="@id/txt_code"
        android:layout_toRightOf="@id/bt_1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/draw_bt_2"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/bt_2"
        android:layout_below="@id/txt_code"
        android:id="@+id/bt_3"
        android:background="@drawable/draw_bt_3"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_1"
        android:layout_alignParentLeft="true"
        android:id="@+id/bt_4"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/draw_bt_4"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_1"
        android:layout_toRightOf="@id/bt_4"
        android:id="@+id/bt_5"
        android:background="@drawable/draw_bt_5"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/bt_5"
        android:layout_below="@id/bt_2"
        android:id="@+id/bt_6"
        android:background="@drawable/draw_bt_6"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_4"
        android:layout_alignParentLeft="true"
        android:id="@+id/bt_7"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/draw_bt_7"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_4"
        android:id="@+id/bt_8"
        android:layout_toRightOf="@id/bt_7"
        android:background="@drawable/draw_bt_8"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/bt_8"
        android:layout_below="@id/bt_4"
        android:id="@+id/bt_9"
        android:layout_marginBottom="5dp"
        android:background="@drawable/draw_bt_9"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_c"
        android:layout_toRightOf="@id/bt_9"
        android:id="@+id/bt_0"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/draw_bt_0"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_ok"
        android:id="@+id/bt_c"
        android:layout_toRightOf="@id/bt_6"
        android:background="@drawable/draw_bt_c"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/bt_3"
        android:layout_below="@id/txt_code"
        android:id="@+id/bt_ok"
        android:background="@drawable/draw_bt_v"
        />
</RelativeLayout>
